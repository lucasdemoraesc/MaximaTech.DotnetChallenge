<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MaxStore</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/mvc-grid/css/mvc-grid.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <header>
        <nav class="topnav" id="myTopnav">
            <a class="active" asp-area="" asp-controller="Home" asp-action="Index">MaxStore</a>
            <div class="dropdown">
                <button class="dropbtn">
                    Cadastros
                    <i class="fa fa-caret-down"></i>
                </button>
                <div class="dropdown-content">
                    <a asp-area="" asp-controller="Produto" asp-action="Index">Produto</a>
                </div>
            </div>
            <a href="javascript:void(0);" class="icon" onclick="topNavToggle()">
                <i class="fa fa-bars"></i>
            </a>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3 content">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container text-center">
            &copy; 2021 - Desenvolvido com 💚 por <a href="https://github.com/lucasdemoraesc" target="_blank">&#64;lucasdemoraesc</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/mvc-grid/js/mvc-grid.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>
    <script>
        document.querySelectorAll(".mvc-grid").forEach(element => new MvcGrid(element));
    </script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
